<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#fff"
        android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           >

           <TextView
               android:id="@+id/textView34"
               android:layout_width="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_height="30dp"
               android:layout_marginBottom="10dp"
               android:textColor="@color/lightblack"
               android:text="请先选择桌号"
                android:textSize="20dp"
               android:layout_centerHorizontal="true"/>

           <ListView
               android:id="@+id/listview"
               android:layout_width="300dp"
               android:layout_height="290dp"
               android:layout_below="@id/textView34"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:background="@drawable/zhangdanlist" />

           <ImageView
               android:layout_width="320dp"
               android:layout_height="1dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
               android:layout_below="@id/listview"
               android:background="#dcdcdc"/>
       </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计："
                android:textColor="@color/lightblack"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_marginRight="5dp"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/orienge"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textView35"
                android:textColor="@color/lightblack"
                android:text="实付：" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/textView36"
                android:textColor="@color/orienge"
                android:text="0.0" />

            <Button
                android:id="@+id/button11"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="结账"
                android:textColor="#fff"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button"/>

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView37"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/lightblack"
                android:layout_marginLeft="5dp"
                android:text="折扣：" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView37"
                android:layout_toRightOf="@id/textView70"
                android:layout_marginTop="13dp"
                android:entries="@array/zhekou"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lightblack"
            android:layout_gravity="center"
            android:text="正在用餐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:id="@+id/table1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="40dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="V001" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="空闲" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/table2"
                android:layout_width="150dp"
                android:layout_height="150dp"
               android:layout_marginRight="40dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="V002" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="空闲" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/table3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="V003" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="空闲" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:id="@+id/table4"
            android:background="#fff">

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="V004" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:text="空闲" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
